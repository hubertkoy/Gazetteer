{% extends 'base.html.twig' %}

{% block title %}Hello CountryInfoController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! âœ…</h1>

        This friendly message is coming from:
        <ul>
            {{ dump(content) }}
            <li>{{ content["currency"]["symbol"] ~ ' ' ~ content["currency"]["name"] }}</li>
            <li>{{ content["country_flag"] ~ ' ' ~ content["country_name"] }}</li>
            {# <li>{{ content.annotations.sun.rise.civil|date(timezone="Europe/London") }}</li>
            <li>{{ content.annotations.sun.set.civil|date(timezone="Europe/London") }}</li> #}
            <li>{{ 'NorthEast: ' ~ content["bounds"]["northeast"]["lat"] ~ '(lat) ' ~ content["bounds"]["northeast"]["lng"] ~ '(lng)' }}</li>
            <li>{{ 'SouthWest: ' ~ content["bounds"]["southwest"]["lat"] ~ '(lat) ' ~ content["bounds"]["southwest"]["lng"] ~ '(lng)' }}</li>
        </ul>
    </div>
{% endblock %}
